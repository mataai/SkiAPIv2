{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "preserveSymlinks": true,
    "strict": true,
    "incremental": true
  },
  "paths": {
    "~groups/*": ["src/groups/*"],
    "~core/*": ["src/core/*"],
    "~entities/*": ["src/core/entities/*"]
  }
}
